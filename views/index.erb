<h1>Stores</h1><hr>

<% if @stores.any? %>
  <h2>Stores:</h2>

  <ul>
    <% @stores.each do |store| %>
      <li><h4><a href = "/store/<%= store.id %>"><%= store.store %></a></h4></li>
    <% end %>
  </ul>
  <h4>Click store name to edit store or view associated brands.</h4>
<%else %>
  <h4>There are no stores in the database.</h4>
<% end %>

<a class="btn btn-primary" href="/inputs/new">Add Store</a><hr>

<h1>Brands</h1><hr>

<% if @brands.any? %>
  <h2>Brands:</h2>

  <ul>
    <% @brands.each do |brand| %>
      <li><h4><a href = "/brand/<%= brand.id %>"><%= brand.brandname %></a></h4></li>
    <% end %>
  </ul>
  <h4>Click brand name to edit brand or view associated stores.</h4>
<%else %>
  <h4>There are no brands in the database.</h4>
<% end %>

<a class="btn btn-primary" href="/inputs/new">Add Brand</a>
