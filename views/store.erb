<h2><%= @store.store %></h2><hr>

<% if @store.brands.any? %>
  <h3>Brands in stock:</h3>
  <ul>
    <% @store.brands.each do |brand| %>
      <li><a href="/brand/<%= brand.id%>"><%= brand.brandname %></a></li>
    <% end %>
  </ul>
<% else %>
  <h5>There are no brands added to <%= @store.store %>.</h5>
<% end %>

<h4>Select all brands carried by this store</h4>
<% if @brands.any? %>
  <form action="/store/<%= @store.id %>" method="post">
    <% @brands.each do |brand| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="brands_id[]" value="<%= brand.id %>"><%= brand.brandname %>
        </label>
      </div>
    <% end %>
    <button class="btn btn-primary" type="submit">Add Brand</button>
  </form>
<%else %>
  <a class="btn btn-primary" href="/brands/new">Add Brand</a>
<% end %>

<h3>Update Name</h3>
<form action ="/store/<%= @store.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="store">New Name</label>
    <input class="form-control" type="text" name="store">
  </div>
  <button class="btn btn-primary" type ="submit">Update</button>
</form><br>

<form action="/store/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-primary" type="submit">Delete Store</button>
</form><br>
